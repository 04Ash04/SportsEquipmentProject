@{
    ViewBag.Title = "Главная страница";
}

<div class="container mt-5 text-center">
    <!-- Название сайта -->
    <h1 class="site-title">Гантелька</h1>

    <!-- Изображение гантели -->
    <div class="dumbbell-image">
        <img src="/images/dumbbell.png" alt="Гантель" class="img-fluid">
    </div>

    <!-- Описание про спорт -->
    <h2 class="text-primary mt-4">Спорт — это сила!</h2>

    <!-- Кнопки входа и регистрации -->
    <div class="mt-4">
        <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg rounded-pill mx-2">Войти</a>
        <a href="@Url.Action("Register", "Account")" class="btn btn-info btn-lg rounded-pill mx-2">Регистрация</a>
    </div>
</div>

<style>
    .site-title {
        font-size: 3rem;
        font-weight: bold;
        color: #007bff;
    }

    .dumbbell-image img {
        max-width: 150px;
        height: auto;
        margin: 20px auto;
    }

    .btn-primary {
        background-color: #0056b3;
        border-color: #004085;
    }

    .btn-info {
        background-color: #17a2b8;
        border-color: #117a8b;
    }

    .btn:hover {
        opacity: 0.9;
    }
</style>