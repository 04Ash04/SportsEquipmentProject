@model IEnumerable<SportsEquipmentManagementProject.Models.PurchasePlan>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/PurchasePlan/purchasePlanIndex.css">

<div class="container py-5">
    <a href="@Url.Action("Index", "Menu")" class="btn btn-back">
        <i class="fas fa-arrow-left"></i>
    </a>
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">План закупок</h2>
        <a href="@Url.Action("Create", "PurchasePlan")" class="btn btn-add">
            <i class="fas fa-plus-circle me-2"></i>Новая позиция
        </a>
    </div>

    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="mb-0"><i class="fas fa-list-alt me-2"></i>Список позиций</h4>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-custom mb-0">
                    <thead class="table-header">
                    <tr>
                        <th>Название</th>
                        <th>Цена за шт.</th>
                        <th>Количество</th>
                        <th>Общая сумма</th>
                        <th>Поставщик</th>
                        <th>Действия</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        var totalPrice = item.Price * item.Quantity;
                        <tr>
                            <td>@item.ItemName</td>
                            <td>@Math.Round(item.Price, 2) ₽</td>
                            <td>@item.Quantity</td>
                            <td>@Math.Round(totalPrice, 2) ₽</td>
                            <td>@item.SupplierName</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.Id })" class="btn btn-action btn-edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-action btn-delete">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>