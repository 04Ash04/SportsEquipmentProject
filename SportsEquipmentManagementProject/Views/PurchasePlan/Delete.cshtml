@model PurchasePlan

<h2>Удалить позицию</h2>

<p>Вы уверены, что хотите удалить?</p>

<div>
    <p><strong>Название:</strong> @Model.ItemName</p>
    <p><strong>Количество:</strong> @Model.Price</p>
    <p><strong>Поставщик:</strong> @Model.SupplierName</p>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Удалить</button>
    @Html.ActionLink("Отмена", "Index")
}