@model List<SportsEquipmentManagementProject.Models.UserInventory>
@{
ViewBag.Title = "Закрепленный инвентарь";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/UserInventory/assignInventoryIndex.css">

<div class="container py-5">
    <a href="@Url.Action("Index", "Menu")" class="btn btn-back">
        <i class="fas fa-arrow-left"></i>
    </a>
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h2 class="mb-0"><i class="fas fa-link me-2"></i>Закрепленный инвентарь</h2>
                <a href="@Url.Action("Assign", "UserInventory")" class="btn btn-add">
                    <i class="fas fa-plus-circle me-2"></i>Закрепить инвентарь
                </a>
            </div>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-custom mb-0">
                    <thead class="table-header">
                    <tr>
                        <th>Пользователь</th>
                        <th>Инвентарь</th>
                        <th>Количество</th>
                        <th>Качество</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.User.UserName</td>
                            <td>@item.Inventory.Name</td>
                            <td>
                                <span class="quantity-badge">
                                    @item.Quantity
                                </span>
                            </td>
                            <td>@item.Inventory.Condition</td>
                        </tr>
                    }
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="3" class="text-center py-4">
                                <i class="fas fa-inbox fa-2x mb-3 text-muted"></i>
                                <p class="text-muted">Нет закрепленного инвентаря</p>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>