@model List<SportsEquipmentManagementProject.Models.UserInventory>
@{
    ViewBag.Title = "Закрепить инвентарь";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/UserInventory/assignInventory.css">

<div class="container py-5">
    <div class="card shadow-lg border-0 assign-card">
        <div class="card-header bg-primary text-white py-3">
            <h2 class="mb-0"><i class="fas fa-link me-2"></i>Закрепить инвентарь</h2>
        </div>

        <div class="card-body">
            <form method="post">
                <div class="row g-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold"><i class="fas fa-user me-2"></i>Пользователь:</label>
                            <select name="userId" class="form-select form-select-lg" required>
                                @foreach (var user in ViewBag.Users)
                                {
                                    <option value="@user.Id">@user.UserName</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold"><i class="fas fa-box me-2"></i>Инвентарь:</label>
                            <select name="inventoryId" class="form-select form-select-lg" required>
                                @foreach (var item in ViewBag.Inventory)
                                {
                                    <option value="@item.Id">@item.Name (Доступно: @item.Quantity)</option>
                                }
                            </select>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-bold"><i class="fas fa-hashtag me-2"></i>Количество:</label>
                            <input type="number"
                                   name="quantity"
                                   class="form-control form-control-lg"
                                   min="1"
                                   required
                                   placeholder="Введите количество"/>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <button type="submit" class="btn btn-assign btn-lg px-5">
                        <i class="fas fa-link me-2"></i>Закрепить
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>